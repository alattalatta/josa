{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "ES2021"
    ],
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "target": "ES2021"
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "**/*.ts"
  ]
}
